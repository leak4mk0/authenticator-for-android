<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="@dimen/smart_watch_2_control_width"
  android:layout_height="48px"
  android:background="@color/sw2_list_background"
  tools:ignore="ContentDescription,HardcodedText,PxUsage,RtlHardcoded">

  <TextView
    android:id="@+id/text_view_title"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_alignParentTop="true"
    android:layout_toLeftOf="@+id/image_view"
    android:ellipsize="end"
    android:paddingLeft="6px"
    android:paddingRight="2px"
    android:paddingTop="4px"
    android:scrollHorizontally="true"
    android:singleLine="true"
    android:text="Title"
    android:textColor="@color/sw2_title_text"
    android:textSize="@dimen/smart_watch_2_text_size_small"/>

  <TextView
    android:id="@+id/text_view_value"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_alignParentLeft="true"
    android:layout_toLeftOf="@+id/image_view"
    android:ellipsize="end"
    android:paddingBottom="4px"
    android:paddingLeft="6px"
    android:paddingRight="2px"
    android:scrollHorizontally="true"
    android:singleLine="true"
    android:text="Value"
    android:textColor="@color/sw2_title_text"
    android:textSize="@dimen/smart_watch_2_text_size_large"/>

  <ImageView
    android:id="@+id/image_view"
    android:layout_width="40px"
    android:layout_height="40px"
    android:layout_alignParentBottom="true"
    android:layout_alignParentRight="true"
    android:paddingBottom="4px"
    android:paddingLeft="2px"
    android:paddingRight="6px"
    android:paddingTop="4px"
    android:src="@android:color/white"/>

  <View
    android:layout_width="wrap_content"
    android:layout_height="1px"
    android:layout_alignParentBottom="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentRight="true"
    android:background="@color/sw2_list_divider"/>

</RelativeLayout>
